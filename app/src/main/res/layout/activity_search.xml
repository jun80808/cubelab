<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".Search">


    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="100dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:src="@drawable/_pngtree_magnifying_glass_icon_4419957" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#868e96" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_borderbox"
            android:padding="20dp"
            android:weightSum="100">

            <EditText
                android:id="@+id/edit_search"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_weight="92"
                android:background="@null"
                android:hint="원하는 제품을 작성해주세요."
                android:textColorHint="#868e96" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_search_how"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_borderbox"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카테고리 : "
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text_search_result1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="전체"
                    android:textColor="#000"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
